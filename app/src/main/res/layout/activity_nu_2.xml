
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110sp"
        android:layout_marginLeft="12sp"
        android:text="Ingrese la Medida de la MuÃ±eca"
        />


    <Spinner
        android:id="@+id/spMedidaMU"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12sp"
        android:layout_marginLeft="11sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="12sp"
        android:text="Ingrese la Estatura"
        />


    <Spinner
        android:id="@+id/spEstaturaU"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12sp"
        android:layout_marginLeft="11sp"
        />



    <EditText
        android:id="@+id/etPesoActU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10sp"
        android:hint="Ingrese el Peso Actual"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btSiguiente2"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sig" />

    <TextView
        android:id="@+id/ResultadoN1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="##" />


</LinearLayout>